{{!
    @template mod_wordcloud/wordcloud

    Example context (json):
    {
        "cloudhtml": "testwort1",
        "exportlink": "https://csvexportlink"
    }
}}
<div id="mod-wordcloud-content">
    <div class="container">
        <div class="row mb-3">
            <div class="mod-wordcloud-heading col-md-auto">
                {{#wordcloudname}}
                    <h2>{{wordcloudname}}</h2>
                {{/wordcloudname}}
            </div>
            <div class="col">
                <button class="mod-wordcloud-fs-btn btn btn-primary" title="{{#str}} fullscreen, mod_wordcloud {{/str}}" onclick="$.mod_wordcloud_fs_toggle()">
                    <i id="mod-wordcloud-fs-icon" class="fa fa-expand fa-lg" aria-hidden="true"></i>
                </button>
            </div>
        </div>
        {{#intro}}
            <div class="row">
                {{{intro}}}
            </div>
        {{/intro}}
        <div class="row mb-3">
            <div id="mod-wordcloud-div" class="container m-auto">
                {{#writeaccess}}
                <div class="mod-wordcloud-header row">
                    <div class="col-md-10 col-xs-12">
                        <input type="text" placeholder="{{#str}} textbox, mod_wordcloud {{/str}}" id="mod-wordcloud-new-word" maxlength="40" autofocus="">
                    </div>
                    <div class="col-md-2 col-xs-12">
                        <button id="mod-wordcloud-btn" class="btn btn-primary" onclick="$.mod_wordcloud_add_word()">{{#str}} submitbtn, mod_wordcloud {{/str}}</button>
                    </div>
                </div>
                {{/writeaccess}}
                <div id="mod-wordcloud-words-box" class="row">
                    {{{cloudhtml}}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mod-wordcloud-export">
    <a class="btn btn-secondary" href="{{exportlink}}" target="_blank">{{#str}} exportcsv, mod_wordcloud {{/str}}</a>
</div>
<div class="mod-wordcloud-export">>
    <button class="btn btn-primary" onclick="exportpng()">exportpng</button>
</div>
{{#js}}
    require(['mod_wordcloud/uicontroller'], function(uicontroller) {
    uicontroller.init();
    });
{{/js}}